
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahul.popularmovies.fragment.DetailActivityFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_poster_imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:src="@drawable/sample"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_title_textview"
        android:layout_below="@+id/detail_poster_imageview"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_synopsis_textview"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/detail_title_textview"
        android:layout_alignParentLeft="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_rating_textview"
        android:layout_marginTop="20dp"         android:layout_below="@+id/detail_synopsis_textview"
        android:layout_alignParentLeft="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_releasedate_textview"
        android:layout_below="@+id/detail_rating_textview"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="20dp" />

</RelativeLayout>
</ScrollView>